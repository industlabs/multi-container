#FROM balenalib/%%BALENA_MACHINE_NAME%%-debian-node:10.10-stretch-build as build
FROM balenalib/%%BALENA_MACHINE_NAME%%-debian-node:10-stretch-run

RUN apt-get update && apt-get install -yq --no-install-recommends \
		chromium-browser \
		fbset \
		htop \
		libnss3 \
		libraspberrypi-bin \
		matchbox \
		psmisc \
		sqlite3 \
		ttf-mscorefonts-installer \
		x11-xserver-utils \
		xinit \
		xwit \
		python-dev \
  		libatomic1 \
  		build-essential wget \
		systemd \
    		python \
		g++ \
		make \
		gcc \
		curl \
		git \
		pixman-dev \ 
		cairo-dev \ 
		pangomm-dev \ 
		libjpeg-turbo-dev \ 
		giflib-dev \
		libical-dev libdbus-1-dev libglib2.0-dev libreadline-dev ibudev-dev \

RUN mkdir -p /usr/src/app \
	&& ln -s /usr/src/app /app

WORKDIR /usr/src/app

COPY package.json /usr/src/app/

RUN JOBS=MAX npm install --production

COPY . /usr/src/app

CMD [ "npm", "start" ]
